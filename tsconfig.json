{
  "compilerOptions": {
    "lib": ["es5", "es6", "DOM", "ES2017"],
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": false,
    "strict": true,
    "esModuleInterop": true,
    "strictFunctionTypes": false,
    "skipLibCheck": true
  }
}
